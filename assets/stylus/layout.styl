@import "nib";

.menu-account {
  margin-left: 42px;

  img {
    position: absolute;
    top: 10px;
    left: 20px;
    width: 32px;
    height: 32px;
    border-radius: 3px;
  }
  .meta {
    display: block;
  }
}

#wrap {
  background: url('images/bg.png') repeat;
  padding-top: 78px;
  padding-bottom: 30px;
}

#footer {
  padding: 20px 0 10px;
}

.single {
  max-width: 480px;
  margin: 0 auto 80px;
}

.single h2 {
  margin: 0 0 30px;
  text-align: center;
}
.comment {
  line-height: 1;
}
.comment .author {
  margin-bottom: 6px;
}
.comment .content {
  color: #555;
  line-height: 1.4;
}
.comment time {
  font-size: 13px;
  color: rgba(0,0,0,.4);
}
.comment .action a {
  margin-right: 4px;
  font-size: 12px;
  color: rgba(0,0,0,.3);
}
