.topic-form {
  max-width: 640px;
  margin: 80px auto 0;
}

.topic-form #title {
  width: 100%;
  border: none;
  outline: none;
  font-size: 18px;
  padding: 3px 0;
  border-bottom: 1px solid #eeeeee;
  margin-bottom: 20px;
}
.topic-form #content {
  color: #444;
  font-size: 14px;
  width: 100%;
  height: 300px;
  border: none;
  outline: none;
  padding: 3px 0;
  margin-bottom: 20px;
}

.topic-form .danger-area {
  margin: 20px 0;
  padding: 6px 0;
  border-top: 1px solid #eeeeee;
  border-bottom: 1px solid #eeeeee;
  clearfix();
  input {
    line-height: 34px;
    border: none;
    outline: none;
  }
}
